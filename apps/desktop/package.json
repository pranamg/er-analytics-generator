{
  "name": "@er-analytics/desktop",
  "version": "0.1.0",
  "description": "Desktop application for ER Analytics Generator",
  "main": "dist/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "electron:build": "vite build && electron-builder",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@er-analytics/core": "workspace:*",
    "@er-analytics/er-parser": "workspace:*",
    "@er-analytics/schema-processor": "workspace:*",
    "@er-analytics/sql-generator": "workspace:*",
    "@er-analytics/data-generator": "workspace:*",
    "@er-analytics/requirements-generator": "workspace:*",
    "@er-analytics/prd-generator": "workspace:*",
    "@er-analytics/analytics-engine": "workspace:*",
    "@er-analytics/dashboard-builder": "workspace:*",
    "@er-analytics/powerbi-exporter": "workspace:*",
    "@er-analytics/deploy-generator": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.13.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.0"
  },
  "build": {
    "appId": "com.er-analytics.desktop",
    "productName": "ER Analytics Generator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "mac": {
      "target": ["dmg", "zip"]
    }
  }
}
